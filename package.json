{
  "name": "chore-cli",
  "version": "0.0.7",
  "description": "Ô∏èChore CLI is a pioneer to create a TypeScript application or library.",
  "main": "dist/cli.js",
  "scripts": {
    "prepare": "husky install",
    "dev": "tsc --watch",
    "lint": "eslint src",
    "build": "pnpm run clean && tsc && pnpm run copy-template",
    "clean": "rm -rf dist",
    "copy-template": "ts-node scripts/copy_templates.ts",
    "test": "jest"
  },
  "bin": {
    "chore": "src/chore.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iwfan/chore-cli.git"
  },
  "keywords": [
    "cli",
    "chore"
  ],
  "author": "iwfan <i.wangfancn@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iwfan/chore-cli/issues"
  },
  "homepage": "https://github.com/iwfan/chore-cli#readme",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,scss,css,json,md}": [
      "pretty-quick --staged"
    ],
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "commander": "^7.2.0",
    "ejs": "^3.1.6",
    "execa": "^5.0.0",
    "fs-extra": "^9.1.0",
    "inquirer": "^8.0.0",
    "lint-staged": "^10.5.4",
    "ora": "^5.4.0",
    "prettier": "^2.2.1",
    "tslib": "^2.2.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/ejs": "^3.0.6",
    "@types/fs-extra": "^9.0.11",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "@types/prettier": "^2.2.3",
    "@types/yargs": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "pretty-quick": "^3.1.0",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
